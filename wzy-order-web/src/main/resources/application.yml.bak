server:
  port: 9002 # 注意：这里是9002，不要和9001冲突

spring:
  application:
    name: wzy-order-web
eureka:
  client:
    service-url:
      defaultZone: http://localhost:8888/eureka/
  instance:
    prefer-ip-address: true
    instance-id: ${spring.application.name}:${server.port}
# ... 上面是原有的 eureka 配置 ...

# 针对 wzy-client-service 这个服务，设置负载均衡规则
wzy-client-service:
  ribbon:
    # 指定具体的规则类：随机策略
    NFLoadBalancerRuleClassName: com.netflix.loadbalancer.RandomRule


# 开启 OpenFeign 的 Hystrix 熔断功能
feign:
  hystrix:
    enabled: true